{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "rootDir": "backend",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@src/*": ["backend/*"]
    },
    "types": ["node", "jest"], // Updated to include jest
    "typeRoots": [
      "./node_modules/@types",
      "./backend/types"
    ]
  },
"include": [
  "backend/**/*",
  "backend/types/**/*.d.ts"
],
  "exclude": ["node_modules", "dist"]
}